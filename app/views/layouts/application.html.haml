!!!
%html
  %head
    %title Gryffindor
    = stylesheet_link_tag :all
    = javascript_include_tag 'jquery-1.4.4.min.js'
    = javascript_include_tag 'jquery-ui-1.8.9.min.js'
    = javascript_include_tag 'mootools-1.2.4-base', 'Class.Mutators.jQuery'
    = yield :javascripts
    = csrf_meta_tag
  %body
    = render :partial => 'layouts/menu_bar'
    #container
      #header
        #logo
          = link_to 'Railsbridge Events', root_url
        #login
          - if user_signed_in?
            Signed in as
            = link_to current_user.email, '/users/edit'
            %br
            = link_to 'Sign out', destroy_user_session_path
          - else
            = link_to 'Sign in', new_user_session_path
            or
            = link_to 'Sign up', new_user_registration_path

        %ul.navigation
          %li= link_to 'Events', events_path
          %li= link_to 'Locations', locations_path
          %li Search
          %li Search
          %li Search
          %li Preferences

      #flash
        %p.notice
          = notice
        %p.alert
          = alert

      = yield
      #footer
        %ul.navigation
          %li Lorem
          %li Lorem
          %li Lorem
          %li Lorem
          %li Lorem
          %li Lorem
